#! /bin/bash

# set curp_home variable
cmdpath=$(cd $(dirname $0); pwd)
curp_home=$(cd $cmdpath/../; pwd)

# get a script name
script_name=$(basename $1)

# shift arguments
shift

_OLD_LD_LIBRARY_PATH=$LD_LIBRARY_PATH
source $curp_home/curp-environ/bin/activate
export LD_LIBRARY_PATH=$curp_home/curp-environ/lib:$LD_LIBRARY_PATH
python $curp_home/script/$script_name "$@"
error=$?
deactivate
export LD_LIBRARY_PATH=$_OLD_LD_LIBRARY_PATH

exit $error
