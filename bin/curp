#! /bin/bash

# set curp_home variable
cmdpath=$(cd $(dirname $0); pwd)
curp_home=$(cd $cmdpath/../; pwd)

if [ -f $curp_home/Pipfile ]  # verify instalation of pipenv
then
    export PIPENV_PIPFILE=$curp_home/Pipfile    # pipenv uses $curp_home env
    pipenv run python $curp_home/src/curp.py $@
elif [ -f $curp_home/curp_environ/bin/activate ]
then
    . $curp_home/curp_enviro/bin/activate
    python $curp_home/src/curp.py $@
    deactivate
else
    python $curp_home/src/curp.py $@
fi

error=$?

exit $error
